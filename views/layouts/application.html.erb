<% #helper function to help with links %>
<%
  def link_to(name, url)
    return "<a href='#{url}'>#{name}</a>"
  end
%>


<html>
  <body>
    <h1>You're using a layout</h1>
    <p>
      <h3> I'm a header</h3>
      <p>Put things in the header</p>
      <ul>
        <li><%= link_to('BoneTech Solutions', 'http://bonetech.solutions') %></li>
        <li><%= link_to('Home Page', 'index.html') %></li>
        <li><%= link_to('Porf Page', 'porf.html') %></li>
      </ul>

    </p>
    <hr />
    <div>
      <%= yield %>
    </div>
    <hr />
    <div>
      <h3> I'm a footer</h3>
      <p>Hey this is the footer, Copyright 2015 Porf!</p>
    </div>
  </body>
</html>




